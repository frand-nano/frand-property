import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";

export struct AdderData {
    x: int,
    y: int,
    sum: int,
}

export global AdderDataGlobal {
    in-out property <[AdderData]> data;
}

export component Adder inherits Rectangle {
    VerticalBox {
        Text {
            text: "X: " + AdderDataGlobal.data[0].x;
        }

        HorizontalBox {
            Button {
                text: "+";
                clicked => {
                    AdderDataGlobal.data[0].x += 1;
                }
            }

            Button {
                text: "-";
                clicked => {
                    AdderDataGlobal.data[0].x -= 1;
                }
            }
        }

        Text {
            text: "Y: " + AdderDataGlobal.data[0].y;
        }

        HorizontalBox {
            Button {
                text: "+";
                clicked => {
                    AdderDataGlobal.data[0].y += 1;
                }
            }

            Button {
                text: "-";
                clicked => {
                    AdderDataGlobal.data[0].y -= 1;
                }
            }
        }

        Text {
            text: "Sum: " + AdderDataGlobal.data[0].sum;
            font-size: 24px;
            horizontal-alignment: center;
        }
    }
}
