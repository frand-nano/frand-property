import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";

export global AdderData {
    in-out property <[int]> x;
    callback changed-x(index: int, value: int);
    in-out property <[int]> y;
    callback changed-y(index: int, value: int);
    in property <[int]> sum;
}

export component Adder inherits Rectangle {
    in property <int> index;

    VerticalBox {
        Text {
            text: "X: " + AdderData.x[index];
        }

        HorizontalBox {
            Button {
                text: "+";
                clicked => {
                    AdderData.x[index] += 1;
                }
            }

            Button {
                text: "-";
                clicked => {
                    AdderData.x[index] -= 1;
                }
            }
        }

        Text {
            text: "Y: " + AdderData.y[index];
        }

        HorizontalBox {
            Button {
                text: "+";
                clicked => {
                    AdderData.y[index] += 1;
                }
            }

            Button {
                text: "-";
                clicked => {
                    AdderData.y[index] -= 1;
                }
            }
        }

        Text {
            text: "Sum: " + AdderData.sum[index];
            font-size: 24px;
            horizontal-alignment: center;
        }
    }
}
