import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";

export struct AdderVecGlobalData {
    values: [int],
    sum: int,
}

export global AdderVecGlobal {
    in-out property <[AdderVecGlobalData]> data: [{ }];
}

component AdderVecGlobalComponent inherits Rectangle {
    in-out property <int> global-index: 0;
    in-out property <[int]> global-values: AdderVecGlobal.data[global-index].values;
    changed global-values => {
        AdderVecGlobal.data[global-index].values = self.global-values;
    }
    out property <int> global-sum: AdderVecGlobal.data[global-index].sum;
}

export component AdderVec inherits AdderVecGlobalComponent {
    VerticalBox {
        Text {
            text: "AdderVec[" + root.global-index + "]";
        }

        for value[i] in root.global-values: VerticalBox {
            Text {
                text: "Value[" + i + "]: " + value;
            }

            HorizontalBox {
                Button {
                    text: "+";
                    clicked => {
                        root.global-values[i] += 1;
                    }
                }

                Button {
                    text: "-";
                    clicked => {
                        root.global-values[i] -= 1;
                    }
                }
            }
        }

        Text {
            text: "Sum: " + root.global-sum;
            font-size: 24px;
            horizontal-alignment: center;
        }
    }
}
