import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";

export struct AdderArrayData {
    x: int,
    y: int,
    sum: int,
}

export global AdderArrayDataGlobal {
    in-out property <[AdderArrayData]> data;
}

export component AdderArray inherits Rectangle {
    in property <int> index;

    VerticalBox {
        Text {
            text: "AdderArray[" + index + "]";
        }

        Text {
            text: "X: " + AdderArrayDataGlobal.data[index].x;
        }

        HorizontalBox {
            Button {
                text: "+";
                clicked => {
                    AdderArrayDataGlobal.data[index].x += 1;
                }
            }

            Button {
                text: "-";
                clicked => {
                    AdderArrayDataGlobal.data[index].x -= 1;
                }
            }
        }

        Text {
            text: "Y: " + AdderArrayDataGlobal.data[index].y;
        }

        HorizontalBox {
            Button {
                text: "+";
                clicked => {
                    AdderArrayDataGlobal.data[index].y += 1;
                }
            }

            Button {
                text: "-";
                clicked => {
                    AdderArrayDataGlobal.data[index].y -= 1;
                }
            }
        }

        Text {
            text: "Sum: " + AdderArrayDataGlobal.data[index].sum;
            font-size: 24px;
            horizontal-alignment: center;
        }
    }
}
