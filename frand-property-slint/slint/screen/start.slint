import { Button, VerticalBox } from "std-widgets.slint";
import { Adder } from "../components/adder.slint";
import {
    AdderArray,
    AdderArrayDataGlobal,
} from "../components/adder_array.slint";
import { Repeater } from "../components/repeater.slint";

export component StartScreen inherits Rectangle {
    callback on-confirm();

    VerticalBox {
        Text {
            text: "Start Screen";
            font-size: 24px;
            horizontal-alignment: center;
        }

        Repeater { }

        Adder { }

        for item[i] in AdderArrayDataGlobal.data: AdderArray {
            index: i;
        }

        Button {
            text: "Confirm";
            clicked => {
                root.on-confirm();
            }
        }
    }
}
